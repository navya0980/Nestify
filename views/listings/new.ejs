<% layout("/layouts/boilerplate.ejs") %>
<body>
    
   <div class="row new-form">
    <div class="col-8 offset-2">
        <h1>Create New Listing</h1>
         <form action="/listings" method="POST" class="needs-validation" enctype="multipart/form-data" novalidate>
        <div class="mb-3"><label for="title" class="form-label">Enter The title</label>
        <input type="text" name="title"  class="form-control" required>
       <div class="invalid-feedback">
        Please choose a username.
      </div>   
      </div>
        <div class="mb-3"><label for="description" class="form-label">Description:</label><textarea required class="form-control" name="description" id="" row="10" col="20"></textarea>
      <div class="invalid-feedback">
        Please provide description
      </div></div>
        <!-- <div class="mb-3"><label for="image.url" class="form-label">Enter Image url:</label>
        <input type="url" name="image[url]"  class="form-control"></div> -->
         <div class="mb-3"><label for="image" class="form-label">Upload Image</label>
        <input type="file" name="image"  class="form-control"></div>
        <div class="mb-3"><label for="price" class="form-label">Price of the listing:</label> <input required class="form-control" type="number" name="price" step="100" required>
      <div class="invalid-feedback">
        Enter a valid price
      </div></div>
        <div class="mb-3"><label for="location" class="form-label">Location:</label><input class="form-control" type="text" name="location" required>
      <div class="invalid-feedback">
      Please enter the location
      </div></div>
        <div class="mb-3"><label for="country" class="form-label">Country:</label> <input  class="form-control" type="text" name="country" required>
      <div class="invalid-feedback">
      Provide country name
      </div></div>
       <button class="add-btn">Add</button>
    </form>
    </div>
   </div>
     
</body>


 
        
       
        
       
        
