<% layout("/layouts/boilerplate.ejs") %>
<body>
    
   <div class="row new-form">
    <div class="col-8 offset-2">
        <h1>Create New Listing</h1>
         <form action="/listings" method="POST">
        <div class="mb-3"><label for="title" class="form-label">Enter The title</label>
        <input type="text" name="title"  class="form-control" required></div>
        <div class="mb-3"><label for="description" class="form-label">Description:</label><textarea class="form-control" name="description" id="" row="10" col="20"></textarea></div>
        <div class="mb-3"><label for="price" class="form-label">Price of the listing:</label> <input  class="form-control" type="number" name="price" step="100" required></div>
        <div class="mb-3"><label for="location" class="form-label">Location:</label><input class="form-control" type="text" name="location"></div>
        <div class="mb-3"><label for="country" class="form-label">Country:</label> <input  class="form-control" type="text" name="country"></div>
       <button class="add-btn">Add</button>
    </form>
    </div>
   </div>
    
</body>


 
        
       
        
       
        
