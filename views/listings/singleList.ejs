<% layout("/layouts/boilerplate.ejs") %>
<body>
  <div class="row">
    <div class="show-card col-6 offset-3">
         <div class="card-title"><%= singleList.title %></div>
    <img src="<%= singleList.image.url %>" class="show-img" />
  <div class="show-text">
   
    <div><%= singleList.description %></div>
    <div>&#8377; <%= singleList.price.toLocaleString("en-IN") %></div>
     <div><i class="fa-solid fa-location-dot"></i><%= singleList.location %>,<%= singleList.country %></div>
  </div>
  <div class=" btn-group" >
      
      <form action="/listings/edit/<%= singleList._id %>" method="get" class="e-btn">
    <button  class="e-btn">Edit</button>
  </form>
  <form method="post" action="/listings/<%= singleList._id %>?_method=DELETE" class="d-btn">
    <button >Delete</button>
  </form>

    
  </div>
  </div>
  </div>
</body>
 

 


 